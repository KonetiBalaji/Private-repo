@inject IConfiguration Configuration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TurbineAero</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            color-scheme: light;
        }

        body {
            background: #f4f6f8;
            color: #1a1a1a;
            transition: background 0.3s ease, color 0.3s ease;
        }

        body.dark-mode {
            background: #0d1117;
            color: #e4e6eb;
        }

        a {
            color: #0066cc;
            transition: color 0.3s ease;
        }

        body.dark-mode a {
            color: #58a6ff;
        }

        body.dark-mode ::selection {
            background: rgba(88, 166, 255, 0.35);
        }

        .card,
        .card-shadow,
        .modal-content,
        .dropdown-menu,
        .toast {
            background: #ffffff;
            color: #1a1a1a;
            border: 1px solid #e0e6eb;
            transition: background 0.3s ease, color 0.3s ease, border 0.3s ease, box-shadow 0.3s ease;
        }

        body.dark-mode .card,
        body.dark-mode .card-shadow,
        body.dark-mode .modal-content,
        body.dark-mode .dropdown-menu,
        body.dark-mode .toast {
            background: #161b22;
            color: #e4e6eb;
            border-color: #1f252e;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.55);
        }

        .btn-primary {
            background: #1877f2;
            border: 1px solid #1877f2;
            color: #ffffff;
        }

        .btn-primary:hover {
            background: #1366d1;
            border-color: #1366d1;
        }

        body.dark-mode .btn-primary {
            background: #2563eb;
            border-color: #2563eb;
        }

        .btn-outline-primary {
            border: 1px solid #0066cc;
            color: #0066cc;
        }

        .btn-outline-primary:hover {
            background: #0066cc;
            color: #ffffff;
        }

        body.dark-mode .btn-outline-primary {
            border-color: #58a6ff;
            color: #58a6ff;
        }

        body.dark-mode .btn-outline-primary:hover {
            background: #58a6ff;
            color: #0d1117;
        }

        .navbar {
            background: #ffffff;
            border-bottom: 1px solid #dde1e6;
            min-height: 64px;
            transition: background 0.3s ease, border 0.3s ease;
        }

        body.dark-mode .navbar {
            background: #161b22 !important;
            border-bottom: 1px solid #1f252e;
        }

        .navbar-brand {
            padding: 0;
        }

        .navbar-logo {
            height: 36px;
            width: auto;
        }

        .navbar-nav .nav-link {
            color: #1a1a1a;
            font-weight: 500;
        }

        .navbar-nav .nav-link:hover,
        .navbar-nav .nav-link:focus {
            color: #0066cc;
        }

        body.dark-mode .navbar-nav .nav-link {
            color: #e4e6eb;
        }

        body.dark-mode .navbar-nav .nav-link:hover,
        body.dark-mode .navbar-nav .nav-link:focus {
            color: #58a6ff;
        }

        .form-switch .form-check-input {
            cursor: pointer;
        }

        footer {
            background: transparent;
            transition: background 0.3s ease, color 0.3s ease, border 0.3s ease;
        }

        body.dark-mode footer {
            background: #0b0f16;
            border-color: #1f252e;
            color: #9ba3af;
        }

        .text-muted {
            color: #6c6f75 !important;
        }

        body.dark-mode .text-muted {
            color: #9baec8 !important;
        }

        .settings-divider {
            border-top: 1px solid #e0e6eb;
            margin: 1rem 0;
        }

        body.dark-mode .settings-divider {
            border-color: #1f252e;
        }

        .modal-header,
        .modal-footer {
            border-color: #e0e6eb;
        }

        body.dark-mode .modal-header,
        body.dark-mode .modal-footer {
            border-color: #1f252e;
        }

        #settingsModal .modal-header,
        #settingsModal .modal-footer {
            border: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="@(User.Identity?.IsAuthenticated == true ? "/Dashboard" : "/Account/Login")">
                    <img src="~/images/download.png" alt="TurbineAero" class="navbar-logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"></ul>
                    <ul class="navbar-nav">
                        @{
                            var isAuthenticated = User.Identity?.IsAuthenticated == true;
                            var isSetup2FAPage = Context.Request.Path.StartsWithSegments("/Account/Setup2fa", StringComparison.OrdinalIgnoreCase);
                            var showNavigation = isAuthenticated && !isSetup2FAPage;
                        }
                        @if (showNavigation)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Dashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#settingsModal">Settings</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else if (!isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="settingsModal" tabindex="-1" aria-labelledby="settingsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="settingsModalLabel">Settings</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <strong>Dark Mode</strong>
                            <p class="mb-0 text-muted small">Switch to a dark theme across the app.</p>
                        </div>
                        <div class="form-check form-switch m-0">
                            <input class="form-check-input" type="checkbox" id="darkModeToggle">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="twoFactorSetupModal" tabindex="-1" aria-labelledby="twoFactorSetupLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="twoFactorSetupLabel">Enable Two-Factor Authentication (2FA)</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="twoFactorSetupContent" class="row g-4">
                        <div class="col-md-6 text-center">
                            <div class="border rounded-3 p-3 card-shadow h-100">
                                <p class="text-muted small mb-2">Scan with Google Authenticator or Microsoft Authenticator</p>
                                <img id="twoFactorQrImage" src="" alt="Authenticator QR Code" class="img-fluid" style="max-width: 220px;" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">Backup secret key:</p>
                            <div class="d-flex align-items-center justify-content-between bg-light p-2 rounded">
                                <code id="twoFactorSecret" class="fw-bold"></code>
                                <button class="btn btn-sm btn-outline-secondary" type="button" id="copySecretBtn">Copy</button>
                            </div>
                            <hr />
                            <label for="twoFactorCodeInput" class="form-label">Enter the 6-digit code</label>
                            <input type="text" id="twoFactorCodeInput" class="form-control" maxlength="6" placeholder="000000" autocomplete="one-time-code" />
                            <div id="twoFactorFeedback" class="mt-2 small"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="verifyTwoFactorBtn">Verify & Enable</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const API_BASE_URL = '@(Configuration["App:ApiBaseUrl"] ?? string.Empty)';
        const IS_AUTHENTICATED = @((User.Identity?.IsAuthenticated == true).ToString().ToLower());
        const AUTH_USER_ID = '@(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? string.Empty)';
        const THEME_STORAGE_PREFIX = 'theme:';
        const THEME_STORAGE_KEY = AUTH_USER_ID ? `${THEME_STORAGE_PREFIX}${AUTH_USER_ID}` : null;

        function showToast(message, type = 'success') {
            const toastHtml = `
                <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            let toastContainer = document.getElementById('toast-container');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.id = 'toast-container';
                toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                toastContainer.style.zIndex = '9999';
                document.body.appendChild(toastContainer);
            }

            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = toastContainer.lastElementChild;
            const toast = new bootstrap.Toast(toastElement);
            toast.show();

            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }

        const applyTheme = (theme) => {
            document.body.classList.toggle('dark-mode', theme === 'dark');
        };

        const getStoredTheme = () => {
            if (!THEME_STORAGE_KEY) return null;
            return localStorage.getItem(THEME_STORAGE_KEY);
        };

        const setStoredTheme = (theme) => {
            if (THEME_STORAGE_KEY) {
                localStorage.setItem(THEME_STORAGE_KEY, theme);
            }
        };

        const clearStoredThemes = () => {
            if (THEME_STORAGE_KEY) {
                localStorage.removeItem(THEME_STORAGE_KEY);
            } else {
                Object.keys(localStorage)
                    .filter((key) => key.startsWith(THEME_STORAGE_PREFIX))
                    .forEach((key) => localStorage.removeItem(key));
            }
        };

        document.addEventListener('DOMContentLoaded', () => {
            const darkModeToggle = document.getElementById('darkModeToggle');
            const settingsModalEl = document.getElementById('settingsModal');

            const initializeTheme = async () => {
                if (!IS_AUTHENTICATED) {
                    clearStoredThemes();
                    applyTheme('light');
                    if (darkModeToggle) darkModeToggle.checked = false;
                    return 'light';
                }

                const storedTheme = getStoredTheme();
                if (storedTheme) {
                    applyTheme(storedTheme);
                    if (darkModeToggle) darkModeToggle.checked = storedTheme === 'dark';
                }

                try {
                    const response = await fetch(`/api/account/preferences`, {
                        credentials: 'include'
                    });
                    if (!response.ok) {
                        throw new Error('Unable to load user preferences.');
                    }
                    const payload = await response.json();
                    const theme = payload?.data?.theme ?? 'light';
                    applyTheme(theme);
                    setStoredTheme(theme);
                    if (darkModeToggle) darkModeToggle.checked = theme === 'dark';
                    return theme;
                } catch (error) {
                    const fallback = storedTheme ?? 'light';
                    applyTheme(fallback);
                    if (darkModeToggle) darkModeToggle.checked = fallback === 'dark';
                    return fallback;
                }
            };

            const updateThemePreference = async (theme) => {
                applyTheme(theme);
                if (!IS_AUTHENTICATED) {
                    return;
                }

                try {
                    const response = await fetch(`/api/account/preferences`, {
                        method: 'PATCH',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify({ theme })
                    });

                    if (!response.ok) {
                        const payload = await response.json().catch(() => null);
                        throw new Error(payload?.message || 'Failed to update theme preference.');
                    }

                    setStoredTheme(theme);
                } catch (error) {
                    showToast(error.message, 'danger');
                    const fallback = getStoredTheme() ?? 'light';
                    applyTheme(fallback);
                    if (darkModeToggle) {
                        darkModeToggle.checked = fallback === 'dark';
                    }
                }
            };

            if (darkModeToggle) {
                darkModeToggle.addEventListener('change', () => {
                    const theme = darkModeToggle.checked ? 'dark' : 'light';
                    updateThemePreference(theme);
                });
            }

            (async () => {
                await initializeTheme();
            })();

            if (!IS_AUTHENTICATED || !settingsModalEl) {
                return;
            }

            settingsModalEl.addEventListener('shown.bs.modal', async () => {
                if (darkModeToggle) {
                    darkModeToggle.checked = document.body.classList.contains('dark-mode');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
